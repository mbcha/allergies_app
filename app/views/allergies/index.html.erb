<div class="wrapper allergies-container">
  <h1>Add an Allergy</h1>

  <div class="create-user-allergy">
    <%= form_tag user_allergies_path, class: "form allergy-form", autocomplete: :off, method: :post do %>
    <%= text_field_tag :allergy_name,
    params[:allergy_name],
    class: "form-control search-input typed-text" %>
      <%= submit_tag 'Add', class: "form-control submit-allergy-button hidden" %>
      <% end %>

    <div class="list">
      <ul class="results">
        <% @allergies.each do |allergy| %>
        <% existing_allergy = UserAllergy.where(allergy_id: allergy.id) %>
        <li class="hidden">
          <p class="button <%= "current" if !existing_allergy.empty? %>"><%= link_to allergy.name, allergy_user_allergies_path(allergy), method: :post %></p>
        </li>
        <% end %>
      </ul>
    </div>
  </div>

  <%= link_to "Back", user_path(current_user), class: "btn btn-info previous-country" %>
</div>
