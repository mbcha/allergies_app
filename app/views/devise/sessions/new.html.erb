<div class="wrapper">
  <h1>Log in</h1>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
    required: false,
    autofocus: true,
    input_html: { autocomplete: "email" }, class: "field" %>
    <%= f.input :password,
    required: false,
    input_html: { autocomplete: "current-password" }, class: "field" %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "button" %>
  </div>
  <% end %>

    <%#= link_to "Sign up", new_registration_path(resource_name), class: "button" %>
  <%= render "devise/shared/links" %>
</div>
